<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table table-dark table-striped"> 
  <thead>
    <tr>
      <th>Name</th>
      <th>Adress</th>
      <th>Category</th>
      <th>Payment method</th>
      <th>Phone</th>
      <th>Schedule</th>
      <th>Email</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.adress %></td>
        <td><%= company.category.name %></td>
        <td><%= company.payment_method.name %></td>
        <td><%= company.phone %></td>
        <td><%= company.schedule %></td>
        <td><%= company.email %></td>
        <td><%= company.status %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="d-flex justify-content-center">
<%= link_to 'Agregar Compañía', new_company_path, class:"btn btn-success mb-3"%>
</div>