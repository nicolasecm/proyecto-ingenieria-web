<style type="text/css">
*
{
margin: 0;
padding: 0;
overflow: hidden;
transition: 0.5s;
font-family: 'Jost', sans-serif;
}
header
{
width: 100vw;
height: 100vh;
background: linear-gradient(to right, rgb(55 31 169), rgb(32 171 246));
}

</style>
<header>
<div class="row">
<div class="col-4"></div>
<div class="card col-4 mt-4 text-center d-flex justify-content-center align-items-center">
  <div class="card-title">
    <% usuario =  resource_name.to_s == "user" ? "Usuario" : "Empresa" %>
    <h2 align="center">Registro <%= usuario%></h2>
  </div>
  
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="d-flex justify-content-center row">
        <div class="">
          <%= f.label "Correo" %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="">
          <%= f.label "Nombres" %><br/>
          <%= f.text_field  :first_name, autocomplete: "first_name", class: "form-control" %>
        </div>
        <div class="">
          <%= f.label "Apellidos" %><br/>
          <%= f.text_field  :last_name, autocomplete: "last_name", class: "form-control" %>
        </div>
        <div class="">
          <%= f.label "Usuario" %><br/>
          <%= f.text_field  :username, autocomplete: "username", class: "form-control" %>
        </div>
        

        <div class="">
          <%= f.label "Contraseña" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres minimo)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
        </div>

        <div class="">
          <%= f.label "Confirmacion de contraseña" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="d-flex justify-content-center mt-2">
          <%= f.submit "Registrarse", class:"btn btn-primary"%>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>
<div class="col-4"></div>
</div>
</header>