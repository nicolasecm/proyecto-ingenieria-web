<div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <span class="fs-5 d-none d-sm-inline">Menu</span>
    </a>
    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
    <% if user_signed_in? %>
    
    <% elsif owner_company_signed_in? %>
    
        <li class="nav-item">
            <a href="<%= root_url%>" class="nav-link align-middle px-0">
                <i class="fas fa-home"></i> <span class="ms-1 d-none d-sm-inline">Inicio</span>
            </a>
        </li>
        <li class="nav-item">
            <a href="<%= categories_url%>" class="nav-link align-middle px-0">
                <i class="fas fa-clipboard-list"></i> <span class="ms-1 d-none d-sm-inline">Categorias</span>
            </a>
        </li>
        <li class="nav-item">
            <a href="<%= payment_methods_url%>" class="nav-link align-middle px-0">
                <i class="fas fa-money-check-alt"></i> <span class="ms-1 d-none d-sm-inline">Metodos de pago</span>
            </a>
        </li>
        <li class="nav-item">
            <a href="<%= companies_url%>" class="nav-link align-middle px-0">
                <i class="fas fa-building"></i> <span class="ms-1 d-none d-sm-inline">Empresas</span>
            </a>
        </li>
    <%end%>
    </ul>
    <hr>
    <div class="dropdown pb-4">
        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="/images/Avatar.png" alt="hugenerd" width="30" height="30" class="rounded-circle">

            <% if user_signed_in? %>
                <% usuario = current_user%>
            <% elsif owner_company_signed_in? %>
                <% usuario = current_owner_company%>
            <% end %>
            <span class="d-none d-sm-inline mx-1"><%= usuario.first_name %> <%= usuario.last_name%></span>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="#">Perfil</a></li>
            <li>
                <hr class="dropdown-divider">
            </li>
            <% if user_signed_in? %>
                <li><%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete, class:"dropdown-item" %></li>
            <% elsif owner_company_signed_in? %>
                <li><%= link_to "Cerrar Sesion", destroy_owner_company_session_path, method: :delete, class:"dropdown-item" %></li>
            <% end %>
        </ul>
    </div>
