<%companyfull = Company.where(id: params[:company_id]).first%>
<h1>Productos de la empresa <%= companyfull.name%></h1>

<div class="d-flex justify-content-center mb-2">
<%= link_to 'Regresar', companies_path, class:"btn btn-secondary mx-2"%>
<%= link_to 'Nuevo Producto', new_product_path(company_id: companyfull.id), class:"btn btn-success "%>
</div>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Estado</th>
      <th>Empresa</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% Product.where(company_id: companyfull.id).each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.price %></td>
        <td><%= category.status == true ? "Activo" : "Inactivo"%></td>
        <td><%= companyfull.name%></td>
        <td><%= link_to 'Editar', edit_category_path(category) , class:"btn btn-primary"%></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data:{ confirm: 'Â¿Estas seguro?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
